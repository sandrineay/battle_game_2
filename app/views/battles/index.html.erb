<div class="container">
  <div class="index-header">
    <h1>Battles</h1>
    <%= link_to "Launch a new battle", new_battle_path, class: 'btn-submit-small' %>
  </div>
  <% if @battles.empty? %>
    <div class="m-t-40">
      No battles were fought yet.
      <%= link_to "Launch your first battle!", new_battle_path, class: 'yellow-link' %>
    </div>
  <% else %>
    <table class="margin-dotted-table">
      <tr>
        <td><strong>Winner 👍</strong></td>
        <td></td>
        <td><strong>Loser 👎</strong></td>
        <td></td>
      </tr>
      <% @battles.each do |battle| %>
        <tr class="battle-item">
          <% if battle.score1 == battle.score2 %>
            <td></td>
            <td>Match nul!</td>
            <td></td>
          <% else %>
            <td>
              <%= battle.winner ? battle.winner.name : "Deleted player 😵" %><%=" - #{battle.winner_score}" if battle.winner %>
            </td>
            <td>VS</td>
            <td>
              <%= battle.loser ? battle.loser.name : "Deleted player 😵" %><%=" - #{battle.loser_score}" if battle.loser %>
            </td>
          <% end %>
          <td><p class="text-transparent m-b-0"><em><%= battle.created_at.strftime('%a, %B %e %Y - %l:%M %p') %></em></p></td>
        </tr>
      <% end %>
    </table>
  <% end %>
</div>

